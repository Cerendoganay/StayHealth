<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_primary"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/spacing_lg">

        <!-- DAILY KCAL CARD -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_lg"
            app:cardCornerRadius="@dimen/card_radius"
            app:cardElevation="@dimen/card_elevation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="@dimen/spacing_lg"
                android:background="@color/surface">

                <TextView
                    android:id="@+id/txtDailyKcal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextTitle"
                    android:text="0 / 2000 kcal"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- WEEK SELECTOR -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/spacing_md">

            <TextView
                android:id="@+id/dayS0"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/bg_day_normal"
                android:gravity="center"
                android:text="S"
                android:textStyle="bold"
                android:textColor="#333333"/>

            <TextView
                android:id="@+id/dayM"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/bg_day_selected"
                android:gravity="center"
                android:text="M"
                android:textStyle="bold"
                android:textColor="#333333"/>

            <TextView
                android:id="@+id/dayT"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/bg_day_normal"
                android:gravity="center"
                android:text="T"
                android:textStyle="bold"
                android:textColor="#333333"/>

            <TextView
                android:id="@+id/dayW"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/bg_day_normal"
                android:gravity="center"
                android:text="W"
                android:textStyle="bold"
                android:textColor="#333333"/>

            <TextView
                android:id="@+id/dayT2"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/bg_day_normal"
                android:gravity="center"
                android:text="T"
                android:textStyle="bold"
                android:textColor="#333333"/>

            <TextView
                android:id="@+id/dayF"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/bg_day_normal"
                android:gravity="center"
                android:text="F"
                android:textStyle="bold"
                android:textColor="#333333"/>

            <TextView
                android:id="@+id/dayS"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/bg_day_normal"
                android:gravity="center"
                android:text="S"
                android:textStyle="bold"
                android:textColor="#333333"/>
        </LinearLayout>

        <!-- BREAKFAST -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lg"
            android:layout_marginEnd="@dimen/spacing_lg"
            android:layout_marginTop="@dimen/spacing_md"
            app:cardCornerRadius="@dimen/card_radius"
            app:cardElevation="@dimen/card_elevation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/surface"
                android:orientation="vertical"
                android:padding="@dimen/spacing_lg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/btnBreakfast"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/TextSubtitle"
                        android:text="Breakfast"/>

                    <TextView
                        android:id="@+id/addBreakfast"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextBody"
                        android:text="Add meal"
                        android:textAllCaps="true"
                        android:textColor="@color/brand_primary"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/txtBreakfastSummary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextBody"
                    android:text="No items yet"
                    android:paddingTop="@dimen/spacing_sm"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- LUNCH -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lg"
            android:layout_marginEnd="@dimen/spacing_lg"
            android:layout_marginTop="@dimen/spacing_md"
            app:cardCornerRadius="@dimen/card_radius"
            app:cardElevation="@dimen/card_elevation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/surface"
                android:orientation="vertical"
                android:padding="@dimen/spacing_lg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/btnLunch"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/TextSubtitle"
                        android:text="Lunch"/>

                    <TextView
                        android:id="@+id/addLunch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextBody"
                        android:text="Add meal"
                        android:textAllCaps="true"
                        android:textColor="@color/brand_primary"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/txtLunchSummary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextBody"
                    android:text="No items yet"
                    android:paddingTop="@dimen/spacing_sm"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- DINNER -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lg"
            android:layout_marginEnd="@dimen/spacing_lg"
            android:layout_marginTop="@dimen/spacing_md"
            app:cardCornerRadius="@dimen/card_radius"
            app:cardElevation="@dimen/card_elevation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/surface"
                android:orientation="vertical"
                android:padding="@dimen/spacing_lg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/btnDinner"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/TextSubtitle"
                        android:text="Dinner"/>

                    <TextView
                        android:id="@+id/addDinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextBody"
                        android:text="Add meal"
                        android:textAllCaps="true"
                        android:textColor="@color/brand_primary"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/txtDinnerSummary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextBody"
                    android:text="No items yet"
                    android:paddingTop="@dimen/spacing_sm"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- SNACK -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lg"
            android:layout_marginEnd="@dimen/spacing_lg"
            android:layout_marginTop="@dimen/spacing_md"
            app:cardCornerRadius="@dimen/card_radius"
            app:cardElevation="@dimen/card_elevation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/surface"
                android:orientation="vertical"
                android:padding="@dimen/spacing_lg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/btnSnack"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/TextSubtitle"
                        android:text="Snack"/>

                    <TextView
                        android:id="@+id/addSnack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextBody"
                        android:text="Add meal"
                        android:textAllCaps="true"
                        android:textColor="@color/brand_primary"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/txtSnackSummary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextBody"
                    android:text="No items yet"
                    android:paddingTop="@dimen/spacing_sm"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
