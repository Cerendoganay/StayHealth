<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF7F2">

    <!-- Header -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:background="@drawable/bg_header_peach"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="54dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="#C96B45"
            android:contentDescription="back"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/txtHeaderTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Consultant Definiton"
            android:textColor="#111111"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            app:layout_constraintTop_toTopOf="@id/btnBack"
            app:layout_constraintBottom_toBottomOf="@id/btnBack"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- White card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        android:layout_marginTop="-18dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF">

            <TextView
                android:id="@+id/txtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:gravity="center"
                android:text="Taylor Swift"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#111111"/>

            <include layout="@layout/item_info_row_age"/>
            <include layout="@layout/item_info_row_weight"/>
            <include layout="@layout/item_info_row_height"/>
            <include layout="@layout/item_info_row_chronic"/>
            <include layout="@layout/item_info_row_kcal"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Go Diet List -->
    <TextView
        android:id="@+id/btnGoDietList"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        android:background="@drawable/bg_btn_green"
        android:gravity="center"
        android:text="Go to Diet List"
        android:textColor="#111111"
        android:textStyle="bold"
        android:textSize="16sp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/cardInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Delete Consultant -->
    <TextView
        android:id="@+id/btnDelete"
        android:layout_width="200dp"
        android:layout_height="38dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bg_btn_brown"
        android:gravity="center"
        android:text="Delete Consultant"
        android:textStyle="bold"
        android:textSize="12sp"
        android:textColor="#111111"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/btnGoDietList"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Add Comment -->
    <TextView
        android:id="@+id/btnAddComment"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/bg_btn_peach_round"
        android:gravity="center"
        android:text="Add Comment"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#111111"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/btnDelete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
