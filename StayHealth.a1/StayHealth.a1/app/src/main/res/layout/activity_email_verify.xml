<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F2F2">

    <!-- BACK (4 nokta yerine) -->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_circle"
        android:padding="8dp"
        android:src="@drawable/ic_arrow_back"
        app:tint="#5FC51D"
        android:contentDescription="back"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Verify Your Email -->
    <TextView
        android:id="@+id/txtVerifyTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="Verify Your Email"
        android:textColor="#1E1E1E"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Stay Health -->
    <TextView
        android:id="@+id/txtAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Stay Health"
        android:textColor="#5FC51D"
        android:textSize="44sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/txtVerifyTop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Avocado character -->
    <ImageView
        android:id="@+id/imgAvocado"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/img_login_character"
        android:contentDescription="avocado"
        app:layout_constraintTop_toBottomOf="@id/txtAppName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Green panel -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/panelGreen"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/bg_green_panel_top_round"
        android:paddingStart="22dp"
        android:paddingEnd="22dp"
        android:paddingTop="26dp"
        android:paddingBottom="22dp"
        app:layout_constraintTop_toBottomOf="@id/imgAvocado"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Title -->
        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Account\nVerification"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Info (boşluk arttırıldı) -->
        <TextView
            android:id="@+id/txtInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="Please enter the 4 digit code\nsent to Your Email"
            android:textColor="#E9FFD0"
            android:textSize="13sp"
            app:layout_constraintTop_toBottomOf="@id/txtTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- OTP boxes -->
        <LinearLayout
            android:id="@+id/otpRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/txtInfo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <EditText
                android:id="@+id/otp1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/bg_otp_box"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="#1E1E1E"
                android:textSize="18sp"
                android:autofillHints="smsOtp"/>

            <Space android:layout_width="12dp" android:layout_height="1dp"/>

            <EditText
                android:id="@+id/otp2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/bg_otp_box"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="#1E1E1E"
                android:textSize="18sp"
                android:autofillHints="smsOtp"/>

            <Space android:layout_width="12dp" android:layout_height="1dp"/>

            <EditText
                android:id="@+id/otp3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/bg_otp_box"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="#1E1E1E"
                android:textSize="18sp"
                android:autofillHints="smsOtp"/>

            <Space android:layout_width="12dp" android:layout_height="1dp"/>

            <EditText
                android:id="@+id/otp4"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/bg_otp_box"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="#1E1E1E"
                android:textSize="18sp"
                android:autofillHints="smsOtp"/>
        </LinearLayout>

        <!-- Resend -->
        <TextView
            android:id="@+id/txtResend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="Resend Code"
            android:textColor="#E9FFD0"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/otpRow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Verify button -->
        <Button
            android:id="@+id/btnVerify"
            android:layout_width="150dp"
            android:layout_height="44dp"
            android:layout_marginTop="16dp"
            android:text="verify"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_btn_outline_white"
            app:layout_constraintTop_toBottomOf="@id/txtResend"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
