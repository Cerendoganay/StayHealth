<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F2F2">

    <!-- BACK -->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/bg_circle"
        android:src="@drawable/ic_arrow_back"
        android:padding="8dp"
        app:tint="#5FC51D"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Sağ üst avokado -->
    <ImageView
        android:id="@+id/imgAvocadoTop"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="18dp"
        android:src="@drawable/img_avocado_top_bottom"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/txtTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Sign up to continue"
        android:textColor="#1E1E1E"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/txtAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Stay Health"
        android:textColor="#5FC51D"
        android:textSize="42sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/txtTop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Karakter -->
    <ImageView
        android:id="@+id/imgCharacter"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/img_login_character"
        app:layout_constraintTop_toBottomOf="@id/txtAppName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Yeşil Panel -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/panelGreen"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_green_panel_top_round"
        android:padding="18dp"
        app:layout_constraintTop_toBottomOf="@id/imgCharacter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- USERNAME -->
        <TextView
            android:id="@+id/lblUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="Username"
            android:textColor="#BFEF9A"
            android:textSize="13sp"
            app:layout_constraintTop_toBottomOf="@id/txtTitle"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/edtUsername"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/bg_input_round"
            android:hint="Olivia Wilson"
            android:paddingHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/lblUsername"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- EMAIL -->
        <TextView
            android:id="@+id/lblEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Email"
            android:textColor="#BFEF9A"
            android:textSize="13sp"
            app:layout_constraintTop_toBottomOf="@id/edtUsername"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/bg_input_round"
            android:hint="hello@reallygreatsite.com"
            android:inputType="textEmailAddress"
            android:paddingHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/lblEmail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- PASSWORD -->
        <TextView
            android:id="@+id/lblPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Password"
            android:textColor="#BFEF9A"
            android:textSize="13sp"
            app:layout_constraintTop_toBottomOf="@id/edtEmail"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/bg_input_round"
            android:hint="******"
            android:inputType="textPassword"
            android:paddingHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/lblPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- CONFIRM -->
        <TextView
            android:id="@+id/lblConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Confirm Password"
            android:textColor="#BFEF9A"
            android:textSize="13sp"
            app:layout_constraintTop_toBottomOf="@id/edtPassword"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/edtConfirm"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/bg_input_round"
            android:hint="******"
            android:inputType="textPassword"
            android:paddingHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/lblConfirm"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- ROLE TOGGLE -->
        <LinearLayout
            android:id="@+id/roleToggle"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="14dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_toggle_container"
            android:padding="4dp"
            app:layout_constraintTop_toBottomOf="@id/edtConfirm"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/btnClient"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Client"
                android:textStyle="bold"
                android:background="@drawable/bg_toggle_selected"/>

            <TextView
                android:id="@+id/btnDietician"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Dietician"
                android:textStyle="bold"
                android:background="@drawable/bg_toggle_unselected"/>
        </LinearLayout>

        <!-- SIGN UP BUTTON -->
        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="140dp"
            android:layout_height="44dp"
            android:layout_marginTop="16dp"
            android:text="Sign up"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_btn_outline_white"
            app:layout_constraintTop_toBottomOf="@id/roleToggle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
