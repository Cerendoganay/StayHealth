<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_primary">

    <!-- FragmentContainerView ile ProgressChartFragment'i doğrudan gösteriyoruz. -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/progressFragmentContainer"
        android:name="com.stayhealth.ui.dashboard.ProgressChartFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout="@layout/fragment_progress_chart" />

    <!-- BOTTOM NAV -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="74dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="24dp"
            android:paddingEnd="24dp">

            <ImageView
                android:id="@+id/navChecklist"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:src="@drawable/ic_checklist"
                android:contentDescription="checklist"
                app:tint="#444444"/>

            <ImageView
                android:id="@+id/navChart"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:padding="12dp"
                android:background="@drawable/bg_nav_selected"
                android:src="@drawable/ic_chart"
                android:contentDescription="chart"
                app:tint="#2E7D32"/>

            <ImageView
                android:id="@+id/navProfile"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:src="@drawable/ic_profile"
                android:contentDescription="profile"
                app:tint="#111111"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
