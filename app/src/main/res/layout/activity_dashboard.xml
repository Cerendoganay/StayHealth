<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F2F2">

    <!-- BACK -->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_circle"
        android:src="@drawable/ic_arrow_back"
        android:padding="8dp"
        app:tint="#5FC51D"
        android:contentDescription="back"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- TOP BAR -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_profile"
            android:scaleType="centerCrop"
            android:contentDescription="avatar" />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:text="Dashboard"
            android:textColor="#111111"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/btnFilter"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_filter"
            android:layout_marginEnd="8dp"
            android:contentDescription="filter" />
    </LinearLayout>

    <!-- CALORIES CARD -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardCalories"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="18dp"
            android:background="#FFFFFF">

            <TextView
                android:id="@+id/txtDailyKcal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 / 2000\nkcal"
                android:textColor="#111111"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="3dp"
                    android:layout_weight="1"
                    android:background="#2FB44A" />

                <Space android:layout_width="16dp" android:layout_height="1dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="3dp"
                    android:layout_weight="1"
                    android:background="#2FB44A" />

                <Space android:layout_width="16dp" android:layout_height="1dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="3dp"
                    android:layout_weight="1"
                    android:background="#2FB44A" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="carbs\n30 gr"
                    android:textAlignment="center"
                    android:textColor="#444444"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="protein\n180 gr"
                    android:textAlignment="center"
                    android:textColor="#444444"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="fat\n16 gr"
                    android:textAlignment="center"
                    android:textColor="#444444"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- DAY SELECTOR -->
    <LinearLayout
        android:id="@+id/daySelector"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/cardCalories"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/dayS0"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/bg_day_normal"
            android:gravity="center"
            android:text="S"
            android:textColor="#333333"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dayM"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/bg_day_selected"
            android:gravity="center"
            android:text="M"
            android:textColor="#333333"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dayT"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/bg_day_normal"
            android:gravity="center"
            android:text="T"
            android:textColor="#333333"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dayW"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/bg_day_normal"
            android:gravity="center"
            android:text="W"
            android:textColor="#333333"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dayT2"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/bg_day_normal"
            android:gravity="center"
            android:text="T"
            android:textColor="#333333"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dayF"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/bg_day_normal"
            android:gravity="center"
            android:text="F"
            android:textColor="#333333"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dayS"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/bg_day_normal"
            android:gravity="center"
            android:text="S"
            android:textColor="#333333"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- CONTENT SCROLL -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/daySelector"
        app:layout_constraintBottom_toTopOf="@id/bottomNavBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="14dp">

            <!-- BREAKFAST -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:background="#8EDB63">

                    <!-- Başlık + Add Meal -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/btnBreakfast"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Breakfast"
                            android:textColor="#111111"
                            android:textStyle="bold"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/addBreakfast"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+ Add Meal"
                            android:textStyle="bold"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <!-- Seçilen yemekler -->
                    <TextView
                        android:id="@+id/txtBreakfastSummary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="12sp"
                        android:paddingTop="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- LUNCH -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:background="#8EDB63">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/btnLunch"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Lunch"
                            android:textColor="#111111"
                            android:textStyle="bold"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/addLunch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+ Add Meal"
                            android:textColor="#111111"
                            android:textStyle="bold"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtLunchSummary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="12sp"
                        android:paddingTop="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- DINNER -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:background="#8EDB63">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/btnDinner"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Dinner"
                            android:textColor="#111111"
                            android:textStyle="bold"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/addDinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+ Add Meal"
                            android:textColor="#111111"
                            android:textStyle="bold"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtDinnerSummary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="12sp"
                        android:paddingTop="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- SNACK -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:background="#8EDB63">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/btnSnack"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Snack"
                            android:textColor="#111111"
                            android:textStyle="bold"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/addSnack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+ Add Meal"
                            android:textColor="#111111"
                            android:textStyle="bold"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtSnackSummary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="12sp"
                        android:paddingTop="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- EXERCISE -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:gravity="center_vertical"
                    android:background="#F2C6A8">

                    <TextView
                        android:id="@+id/btnExercise"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Exercise"
                        android:textColor="#111111"
                        android:textStyle="bold"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/addExercise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+ Add"
                        android:textColor="#111111"
                        android:textStyle="bold"
                        android:textSize="13sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- BOTTOM NAV -->
    <LinearLayout
        android:id="@+id/bottomNavBar"
        android:layout_width="0dp"
        android:layout_height="62dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/navChart"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_weight="1"
            android:src="@drawable/ic_chart"
            android:contentDescription="chart" />

        <ImageView
            android:id="@+id/navChecklist"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_weight="1"
            android:src="@drawable/ic_checklist"
            android:contentDescription="checklist" />

        <ImageView
            android:id="@+id/navProfile"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:src="@drawable/ic_profile"
            android:contentDescription="profile" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textAllCaps="false"
            android:background="@drawable/bg_btn_outline_white"
            android:textColor="#5FC51D"
            android:layout_marginTop="1dp"
            android:layout_gravity="center"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
